{% extends "templates/app.twig" %} {% block content %}
<div class="flex-grow-1 d-flex align-items-start">
    <div class="container-fluid mr-5 ml-5">
        <div class="row">
            <div class="col-md-6 col-lg-6 col-xl-6 col-sm-12 col-12 text-sm-center text-md-left text-center col-12">
                <form action="POST" autocomplete="off">
                    <h3>Contacto</h3>
                    <div class="form-group">
                        <label for="name">Nombre</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="email">Correo electrónico</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="message">Mensaje</label>
                        <textarea class="form-control" id="message" name="message" rows="3"></textarea>
                    </div>
                    <div class="row">
                        <div class="col contact-info">
                            <p>Programa de Información Profesional</p>
                            <p>iprofesional@itcr.ac.cr</p>
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn informatec-btn" role="button" aria-labelledby="Enviar mensaje">Enviar</button>

                        </div>
                    </div>

                </form>

            </div>
            <div class="img-contact col-lg-6 col-md-6 col-xl-6 col-sm-12 col-12">
                <img class="picture" src="/public/img/img_contact.svg" alt="">
            </div>
        </div>


    </div>
</div>

{% endblock %} {% block scripts %}
<script>
    document.getElementById('nav_contact').classList.add("active");
</script>
{% endblock %}